{
  "name": "@gmr-fms/word-extractor",
  "version": "0.2.0",
  "description": "Node.js package to read Word .doc files",
  "main": "src/extract.js",
  "files": [
    "src"
  ],
  "scripts": {
    "lint": "eslint src test",
    "test": "mocha --sort --recursive ./test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gmr-fms/node-word-extractor.git"
  },
  "keywords": [
    "word"
  ],
  "author": "Stuart Watt <stuart@morungos.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gmr-fms/node-word-extractor/issues"
  },
  "homepage": "https://github.com/morungos/node-word-extractor",
  "devDependencies": {
    "chai": "^1.10.0",
    "chai-as-promised": "^4.1.1",
    "eslint": "^5.8.0",
    "mocha": "^2.2.5",
    "prettier": "1.14.3"
  },
  "dependencies": {
    "async": "^1.5.2",
    "dedent": "^0.7.0",
    "event-stream": "^3.3.2",
    "lodash": "^4.17.11",
    "xmldom": "^0.1.27",
    "xpath": "0.0.24",
    "yauzl": "^2.8.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "browser": true,
      "mocha": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 8
    },
    "rules": {
      "no-var": "error",
      "prefer-const": "error",
      "no-confusing-arrow": "error",
      "semi": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "all",
          "ignoreRestSiblings": false,
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}